('Mervin Maik', 'BSEE', '4', 'graduated'), ('Joseph Coronodo', 'BSEE', '1', 'inactive'), ('Tim Tan', 'BSME', '1', 'inactive'),
('Regan Asino', 'BSCE', '4', 'graduated'), ('Miguel Co', 'BSCE', '2', 'active'), ('Nicole Dela Cruz', 'BSCE', '3', 'active'),
('Mika Miranda', 'BSED', '4', 'graduated'), ('Julia Datang', 'BSED', '2', 'active'), ('Ayessa Pili', 'BSED', '3', 'active');

